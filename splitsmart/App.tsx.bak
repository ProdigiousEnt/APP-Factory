
import React, { useState, useEffect, useCallback, useRef } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { ReceiptData, ReceiptItem, Assignment, ChatMessage, Totals } from './types';
import { parseReceiptImage, interpretChatCommand } from './services/geminiService';
import ReceiptPane from './components/ReceiptPane';
import ChatPane from './components/ChatPane';
import SummaryPane from './components/SummaryPane';
import { Paywall } from './components/Paywall';
import { saveReceiptSession, getReceiptHistory } from './services/supabaseService';
import { RevenueCatService } from './services/revenueCatService';
import { Haptics, ImpactStyle } from '@capacitor/haptics';
import { Camera, CameraResultType, CameraSource } from '@capacitor/camera';
import { StatusBar, Style } from '@capacitor/status-bar';
import {
  Scan,
  MessageSquare,
  PieChart,
  Plus,
  Settings,
  ChevronRight,
  Receipt as ReceiptIcon,
  Sparkles,
  ArrowRight,
  History,
  CheckCircle2,
  Lock,
  Zap,
  X,
  TrendingDown,
  BarChart3,
  Calendar
} from 'lucide-react';
import { clsx, type ClassValue } from 'clsx';
import { twMerge } from 'tailwind-merge';

function cn(...inputs: ClassValue[]) {
  return twMerge(clsx(inputs));
}

const App: React.FC = () => {
  const [receipt, setReceipt] = useState<ReceiptData | null>(null);
  const [assignments, setAssignments] = useState<Assignment[]>([]);
  const [isProcessing, setIsProcessing] = useState(false);
  const [messages, setMessages] = useState<ChatMessage[]>([]);
  const [totals, setTotals] = useState<Totals>({});
  const [activeTab, setActiveTab] = useState<'receipt' | 'chat' | 'summary' | 'history'>('receipt');
  const [history, setHistory] = useState<any[]>([]);
  const [isSaving, setIsSaving] = useState(false);

  // RevenueCat State
  const [isPro, setIsPro] = useState(false);
  const [showSettings, setShowSettings] = useState(false);
  const [isPurchasing, setIsPurchasing] = useState(false);
  const [showProPrompt, setShowProPrompt] = useState(false);
  const [dismissedProBanner, setDismissedProBanner] = useState(false);
  const [showSubscriptionHistory, setShowSubscriptionHistory] = useState(false);
  const [showPrivacySecurity, setShowPrivacySecurity] = useState(false);

  // Initialize Native Features
  useEffect(() => {
    StatusBar.setStyle({ style: Style.Light });
    loadHistory();

    // RevenueCat Init
    const rcKey = (import.meta as any).env?.VITE_REVENUECAT_APPLE_KEY || "";
    if (rcKey) {
      RevenueCatService.initialize(rcKey).then(() => {
        RevenueCatService.checkSubscriptionStatus().then(status => setIsPro(status));
      });
    }
  }, []);

  const loadHistory = async () => {
    try {
      const data = await getReceiptHistory();
      setHistory(data);

      // Show Pro prompt after 3 receipts (only once)
      if (!isPro && data.length === 3 && !localStorage.getItem('proPromptShown')) {
        setShowProPrompt(true);
        localStorage.setItem('proPromptShown', 'true');
      }
    } catch (e) {
      console.error("Failed to load history", e);
    }
  };

  const calculateTotals = useCallback(() => {
    if (!receipt) return;
    const newTotals: Totals = {};
    const itemShares: { [itemId: string]: string[] } = {};

    assignments.forEach(asgn => {
      asgn.itemIds.forEach(id => {
        if (!itemShares[id]) itemShares[id] = [];
        if (!itemShares[id].includes(asgn.personName)) {
          itemShares[id].push(asgn.personName);
        }
      });
    });

    const totalItemsSubtotal = receipt.items.reduce((acc, item) => acc + (item.price * item.quantity), 0);

    assignments.forEach(asgn => {
      if (!newTotals[asgn.personName]) {
        newTotals[asgn.personName] = { subtotal: 0, tax: 0, tip: 0, total: 0, items: [] };
      }
    });

    Object.entries(itemShares).forEach(([itemId, people]) => {
      const item = receipt.items.find(i => i.id === itemId);
      if (item && people.length > 0) {
        const individualShare = (item.price * item.quantity) / people.length;
        people.forEach(person => {
          if (newTotals[person]) {
            newTotals[person].subtotal += individualShare;
            newTotals[person].items.push({
              itemName: item.name,
              sharedWithCount: people.length,
              individualCost: individualShare
            });
          }
        });
      }
    });

    Object.keys(newTotals).forEach(person => {
      const shareRatio = totalItemsSubtotal > 0 ? newTotals[person].subtotal / totalItemsSubtotal : 0;
      newTotals[person].tax = receipt.tax * shareRatio;
      newTotals[person].tip = (receipt.tip || 0) * shareRatio;
      newTotals[person].total = newTotals[person].subtotal + newTotals[person].tax + newTotals[person].tip;
    });

    setTotals(newTotals);
  }, [receipt, assignments]);

  useEffect(() => {
    calculateTotals();
  }, [calculateTotals]);

  const triggerHaptic = async (style: ImpactStyle = ImpactStyle.Medium) => {
    try { await Haptics.impact({ style }); } catch (e) { }
  };

  const processImage = async (base64String: string) => {
    setIsProcessing(true);
    await triggerHaptic(ImpactStyle.Heavy);
    try {
      const parsedData = await parseReceiptImage(base64String);
      setReceipt(parsedData);
      setMessages([{
        id: Date.now().toString(),
        role: 'assistant',
        content: `Receipt parsed! Total: ${parsedData.currency || ''}${parsedData.total.toFixed(2)}. How should we split this?`,
        timestamp: Date.now()
      }]);
      await triggerHaptic(ImpactStyle.Medium);
      setActiveTab('receipt');
    } catch (error) {
      console.error("Error parsing receipt:", error);
      alert("Failed to parse receipt. Please try again.");
    } finally {
      setIsProcessing(false);
    }
  };

  const handleCapture = async () => {
    await triggerHaptic(ImpactStyle.Light);
    setIsProcessing(true);

    try {
      const image = await Camera.getPhoto({
        quality: 90,
        allowEditing: true,
        resultType: CameraResultType.Base64,
        source: CameraSource.Camera
      });

      if (image.base64String) {
        await processImage(image.base64String);
      }
    } catch (error: any) {
      console.error("Camera error:", error);

      // Provide user-friendly error messages
      if (error?.message?.toLowerCase().includes('permission') ||
        error?.message?.toLowerCase().includes('denied') ||
        error?.message?.toLowerCase().includes('not authorized')) {
        alert("ðŸ“¸ Camera access is required to scan receipts.\n\nPlease enable camera permissions in Settings > SplitSmart AI > Camera.");
      } else if (error?.message?.toLowerCase().includes('cancel')) {
        // User cancelled - no error needed
      } else if (error?.message) {
        alert(`Failed to open camera: ${error.message}\n\nPlease try again or use 'Upload from Gallery'.`);
      } else {
        alert("Failed to open camera. Please try again or use 'Upload from Gallery'.");
      }

      setIsProcessing(false);
    }
  };

  const handleGalleryUpload = async () => {
    await triggerHaptic(ImpactStyle.Light);
    setIsProcessing(true);

    try {
      const image = await Camera.getPhoto({
        quality: 90,
        allowEditing: false,
        resultType: CameraResultType.Base64,
        source: CameraSource.Photos // Native iOS photo picker
      });

      if (image.base64String) {
        await processImage(image.base64String);
      }
    } catch (error: any) {
      console.error("Gallery error:", error);

      if (error?.message?.toLowerCase().includes('permission') ||
        error?.message?.toLowerCase().includes('denied') ||
        error?.message?.toLowerCase().includes('not authorized')) {
        alert("ðŸ“· Photo library access is required to upload receipts.\n\nPlease enable photo permissions in Settings > SplitSmart AI > Photos.");
      } else if (error?.message?.toLowerCase().includes('cancel')) {
        // User cancelled - no error needed
      } else if (error?.message) {
        alert(`Failed to access photo library: ${error.message}\n\nPlease try again.`);
      } else {
        alert("Failed to access photo library. Please try again.");
      }

      setIsProcessing(false);
    }
  };

  const handleManualAssign = (itemId: string, personName: string) => {
    setAssignments(prev => {
      const next = JSON.parse(JSON.stringify(prev)) as Assignment[];
      let personAsgn = next.find(a => a.personName.toLowerCase() === personName.toLowerCase());

      if (!personAsgn) {
        personAsgn = { personName, itemIds: [itemId] };
        next.push(personAsgn);
      } else {
        if (!personAsgn.itemIds.includes(itemId)) {
          personAsgn.itemIds.push(itemId);
        }
      }
      return next;
    });
  };

  const handleManualUnassign = (itemId: string, personName: string) => {
    setAssignments(prev => {
      let next = JSON.parse(JSON.stringify(prev)) as Assignment[];
      const personAsgn = next.find(a => a.personName.toLowerCase() === personName.toLowerCase());

      if (personAsgn) {
        personAsgn.itemIds = personAsgn.itemIds.filter(id => id !== itemId);
        if (personAsgn.itemIds.length === 0) {
          next = next.filter(a => a.personName.toLowerCase() !== personName.toLowerCase());
        }
      }
      return next;
    });
  };

  const handleSendMessage = async (text: string) => {
    if (!receipt || !text.trim()) return;
    await triggerHaptic(ImpactStyle.Light);

    const newUserMsg: ChatMessage = {
      id: Date.now().toString(), role: 'user', content: text, timestamp: Date.now()
    };
    setMessages(prev => [...prev, newUserMsg]);

    try {
      const updates = await interpretChatCommand(text, receipt.items, assignments);
      setAssignments(prev => {
        let next = JSON.parse(JSON.stringify(prev)) as Assignment[];
        updates.forEach(upd => {
          let personAsgn = next.find(a => a.personName.toLowerCase() === upd.personName.toLowerCase());
          if (!personAsgn) {
            personAsgn = { personName: upd.personName, itemIds: [] };
            next.push(personAsgn);
          }
          if (upd.addItemIds) {
            personAsgn.itemIds = Array.from(new Set([...personAsgn.itemIds, ...upd.addItemIds]));
          }
          if (upd.removeItemIds) {
            personAsgn.itemIds = personAsgn.itemIds.filter(id => !upd.removeItemIds?.includes(id));
          }
        });
        return next.filter(a => a.itemIds.length > 0);
      });

      setMessages(prev => [...prev, {
        id: (Date.now() + 1).toString(), role: 'assistant',
        content: `Updated! Check the summary to see the new split.`,
        timestamp: Date.now()
      }]);
      await triggerHaptic(ImpactStyle.Medium);
    } catch (error) {
      console.error("Chat error:", error);
    }
  };

  const handleSave = async () => {
    if (!receipt) return;
    setIsSaving(true);
    await triggerHaptic(ImpactStyle.Heavy);
    try {
      await saveReceiptSession(null, receipt, assignments);
      alert("Split saved successfully!");
      loadHistory();
      await triggerHaptic(ImpactStyle.Medium);
    } catch (error) {
      console.error("Save error:", error);
      alert("Failed to save split.");
    } finally {
      setIsSaving(false);
    }
  };

  const handleSelectHistory = async (item: any) => {
    await triggerHaptic(ImpactStyle.Medium);
    setReceipt({
      items: item.items,
      tax: item.tax,
      tip: item.tip,
      total: item.total,
      currency: item.currency || '$'
    });
    setAssignments(item.assignments || []);
    setMessages([{
      id: Date.now().toString(),
      role: 'assistant',
      content: `Loaded session from ${new Date(item.created_at).toLocaleDateString()}.`,
      timestamp: Date.now()
    }]);
    setActiveTab('summary');
  };

  const handleTipChange = (newTip: number) => {
    if (!receipt) return;
    setReceipt(prev => prev ? { ...prev, tip: newTip } : null);
  };

  const handlePurchase = async () => {
    setIsPurchasing(true);
    triggerHaptic(ImpactStyle.Heavy);
    try {
      const success = await RevenueCatService.purchase();
      if (success) {
        setIsPro(true);
        alert("Welcome to SplitSmart Pro! ðŸš€ View your Annual Report anytime in Settings.");
        setShowSettings(false);
      }
    } catch (e) {
      console.error("Purchase error", e);
    } finally {
      setIsPurchasing(false);
    }
  };

  const currentYear = new Date().getFullYear();
  const yearlyTotal = history
    .filter(item => new Date(item.created_at).getFullYear() === currentYear)
    .reduce((acc, item) => acc + item.total, 0);

  return (
    <div className="flex flex-col h-screen bg-zinc-50 overflow-hidden text-zinc-900 font-sans">
      <header className="safe-top bg-white/80 backdrop-blur-md border-b border-zinc-200/50 sticky top-0 z-50">
        <div className="px-5 py-4 flex items-center justify-between">
          <div className="flex items-center gap-2.5">
            <div className="w-9 h-9 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-indigo-200">
              <Sparkles size={20} />
            </div>
            <div>
              <h1 className="text-lg font-bold tracking-tight leading-none">SplitSmart</h1>
              <p className="text-[10px] text-indigo-600 font-bold uppercase tracking-widest mt-0.5">AI POWERED</p>
            </div>
          </div>
          <div className="flex items-center gap-3">
            {isPro && (
              <div className="bg-indigo-50 text-indigo-600 px-2.5 py-1 rounded-full flex items-center gap-1 border border-indigo-100">
                <Zap size={10} fill="currentColor" />
                <span className="text-[9px] font-black uppercase tracking-widest">PRO</span>
              </div>
            )}
            {receipt && (
              <button
                onClick={() => { triggerHaptic(); setReceipt(null); setAssignments([]); }}
                className="p-2 text-zinc-400 hover:text-zinc-600 transition-colors"
                aria-label="New"
              >
                <Plus size={22} />
              </button>
            )}
            <button
              onClick={() => { triggerHaptic(); setShowSettings(true); }}
              className="w-8 h-8 rounded-full bg-zinc-100 border border-zinc-200 flex items-center justify-center relative"
            >
              <Settings size={16} className="text-zinc-500" />
              {!isPro && history.length > 3 && (
                <div className="absolute -top-1 -right-1 w-2.5 h-2.5 bg-indigo-500 rounded-full border-2 border-white animate-pulse" />
              )}
            </button>
          </div>
        </div>
      </header>

      {/* Pro Teaser Banner */}
      {!isPro && !dismissedProBanner && history.length >= 1 && (
        <button
          onClick={() => setShowSettings(true)}
          className="bg-gradient-to-r from-indigo-500 to-purple-500 text-white px-4 py-2.5 flex items-center justify-between w-full hover:from-indigo-600 hover:to-purple-600 transition-all active:scale-[0.99]"
        >
          <div className="flex items-center gap-2 flex-1 min-w-0">
            <Sparkles size={16} className="flex-shrink-0" />
            <span className="text-sm font-bold truncate">Get your {currentYear} Annual Report with Pro</span>
          </div>
          <button
            onClick={(e) => { e.stopPropagation(); setDismissedProBanner(true); }}
            className="p-1 hover:bg-white/20 rounded-full transition-colors flex-shrink-0"
          >
            <X size={16} />
          </button>
        </button>
      )}

      <main className="flex-1 overflow-hidden relative">
        <AnimatePresence mode="wait">
          {!receipt && !isProcessing ? (
            <motion.div
              key="welcome" initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} exit={{ opacity: 0, scale: 0.95 }}
              className="absolute inset-0 flex flex-col items-center justify-center p-8 text-center"
            >
              <div className="w-24 h-24 bg-indigo-50 rounded-3xl flex items-center justify-center mb-8 text-indigo-600 shadow-inner relative">
                <div className="absolute inset-0 bg-indigo-600/10 rounded-3xl animate-pulse-slow" />
                <ReceiptIcon size={44} strokeWidth={1.5} />
              </div>
              <h2 className="text-3xl font-extrabold mb-3 tracking-tight">Snap, Split, Simple.</h2>
              <p className="text-zinc-500 max-w-[280px] mb-10 text-lg leading-relaxed">Take a photo of your bill and let our AI handle the math.</p>
              <div className="flex flex-col gap-4 w-full max-w-xs">
                <button onClick={handleCapture} className="bg-indigo-600 text-white px-8 py-4 rounded-2xl flex items-center justify-center gap-3 active:scale-95 transition-all shadow-xl shadow-indigo-100 font-bold text-lg">
                  <Scan size={24} /> Scan Receipt
                </button>
                <button
                  onClick={handleGalleryUpload}
                  className="text-zinc-500 px-8 py-3 rounded-xl hover:bg-zinc-100 active:bg-zinc-200 transition-all font-semibold text-center text-sm"
                >
                  Upload from Gallery
                </button>

                {history.length > 0 && (
                  <button
                    onClick={() => {
                      // Set minimal receipt to enable tab navigation
                      setReceipt({ items: [], tax: 0, tip: 0, total: 0, currency: '$' });
                      setActiveTab('history');
                    }}
                    className="mt-4 text-indigo-600 font-bold text-sm flex items-center justify-center gap-2"
                  >
                    <History size={16} />
                    View Recent Activity
                  </button>
                )}
              </div>
            </motion.div>
          ) : isProcessing ? (
            <motion.div key="loading" initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 flex flex-col items-center justify-center bg-white/80 backdrop-blur-sm z-40">
              <div className="relative">
                <div className="w-20 h-20 border-4 border-indigo-100 rounded-full" />
                <div className="w-20 h-20 border-4 border-t-indigo-600 rounded-full animate-spin absolute top-0" />
                <div className="absolute inset-0 flex items-center justify-center">
                  <Sparkles className="text-indigo-600 animate-pulse" size={24} />
                </div>
              </div>
              <p className="mt-8 text-zinc-900 font-bold text-xl">Gemini is thinking...</p>
            </motion.div>
          ) : (
            <motion.div key="app" initial={{ opacity: 0 }} animate={{ opacity: 1 }} className="h-full flex flex-col">
              <div className="flex-1 overflow-hidden relative">
                <AnimatePresence mode="wait">
                  {activeTab === 'receipt' && (
                    <motion.div key="receipt-tab" initial={{ opacity: 0, x: -20 }} animate={{ opacity: 1, x: 0 }} exit={{ opacity: 0, x: -20 }} className="absolute inset-0">
                      <ReceiptPane
                        receipt={receipt!} assignments={assignments}
                        onAssign={handleManualAssign} onUnassign={handleManualUnassign}
                      />
                    </motion.div>
                  )}
                  {activeTab === 'chat' && (
                    <motion.div key="chat-tab" initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} exit={{ opacity: 0, y: 20 }} className="absolute inset-0">
                      <ChatPane messages={messages} onSendMessage={handleSendMessage} receipt={receipt!} />
                    </motion.div>
                  )}
                  {activeTab === 'summary' && (
                    <motion.div key="summary-tab" initial={{ opacity: 0, x: 20 }} animate={{ opacity: 1, x: 0 }} exit={{ opacity: 0, x: 20 }} className="absolute inset-0">
                      <SummaryPane totals={totals} currency={receipt?.currency || '$'} onSave={handleSave} isSaving={isSaving} onTipChange={handleTipChange} />
                    </motion.div>
                  )}
                  {activeTab === 'history' && (
                    <motion.div key="history-tab" initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }} exit={{ opacity: 0, y: 20 }} className="absolute inset-0">
                      <HistoryView history={history} onSelect={handleSelectHistory} isPro={isPro} onShowSettings={() => setShowSettings(true)} />
                    </motion.div>
                  )}
                </AnimatePresence>
              </div>
              <nav className="safe-bottom bg-white/95 backdrop-blur-xl border-t border-zinc-200/50 px-6 py-2 pb-8">
                <div className="flex items-center justify-between max-w-md mx-auto mt-1">
                  <TabButton active={activeTab === 'receipt'} onClick={() => setActiveTab('receipt')} icon={<ReceiptIcon size={22} />} label="Items" />
                  <TabButton active={activeTab === 'chat'} onClick={() => setActiveTab('chat')} icon={<MessageSquare size={22} />} label="AI Chat" />
                  <TabButton active={activeTab === 'summary'} onClick={() => setActiveTab('summary')} icon={<PieChart size={22} />} label="Summary" />
                  <TabButton active={activeTab === 'history'} onClick={() => setActiveTab('history')} icon={<History size={22} />} label="History" />
                </div>
              </nav>
            </motion.div>
          )}
        </AnimatePresence>

        {/* Pro / Settings Modal */}
        <AnimatePresence>
          {showSettings && (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              exit={{ opacity: 0 }}
              className="fixed inset-0 z-[200] bg-zinc-900/60 backdrop-blur-sm"
              onClick={() => setShowSettings(false)}
            >
              <motion.div
                initial={{ y: "-100%" }}
                animate={{ y: 0 }}
                exit={{ y: "-100%" }}
                transition={{ type: "spring", damping: 25, stiffness: 200 }}
                className="absolute top-0 left-0 right-0 bg-white rounded-b-[2.5rem] p-8 pb-10 max-h-[90vh] overflow-y-auto"
                style={{ paddingTop: 'calc(env(safe-area-inset-top) + 128px)' }}
                onClick={(e) => e.stopPropagation()}
              >
                <div className="flex justify-between items-start mb-8">
                  <div>
                    <h2 className="text-3xl font-black text-zinc-900 tracking-tight">Settings</h2>
                    <p className="text-zinc-500 font-medium mt-1">Manage your SplitSmart experience</p>
                  </div>
                  <button onClick={() => setShowSettings(false)} className="w-10 h-10 bg-zinc-100 rounded-full flex items-center justify-center text-zinc-400">
                    <X size={20} />
                  </button>
                </div>

                {/* Annual Report Feature Card */}
                <div className="mb-8 overflow-hidden rounded-[2rem] border border-zinc-100 shadow-sm">
                  <div className="bg-zinc-50 p-6 flex items-center justify-between">
                    <div className="flex items-center gap-3">
                      <div className="w-10 h-10 bg-indigo-100 rounded-xl flex items-center justify-center text-indigo-600">
                        <BarChart3 size={20} />
                      </div>
                      <div>
                        <h4 className="font-bold text-zinc-900">Yearly Report</h4>
                        <p className="text-[10px] text-zinc-400 font-black uppercase tracking-widest">{currentYear} Insights</p>
                      </div>
                    </div>
                    {isPro ? (
                      <span className="text-[10px] font-black uppercase tracking-[0.2em] text-emerald-500">Unlocked</span>
                    ) : (
                      <Lock size={16} className="text-zinc-300" />
                    )}
                  </div>

                  <div className="p-6 bg-white flex flex-col items-center justify-center text-center relative group">
                    {!isPro && (
                      <div className="absolute inset-0 bg-white/60 backdrop-blur-[2px] z-10 flex flex-col items-center justify-center p-6">
                        <p className="text-zinc-900 font-black text-sm mb-2">PRO FEATURE</p>
                        <p className="text-zinc-500 text-xs font-medium max-w-[180px]">Upgrade to see your full {currentYear} spending breakdown by person and category.</p>
                      </div>
                    )}

                    <div className="w-full space-y-4 opacity-50">
                      <div className="flex justify-between items-end">
                        <div className="flex gap-1.5 items-end h-24">
                          {[40, 70, 45, 90, 60, 30].map((h, i) => (
                            <div key={i} style={{ height: `${h}%` }} className="w-4 bg-indigo-500 rounded-t-full" />
                          ))}
                        </div>
                        <div className="text-right">
                          <p className="text-[10px] font-bold text-zinc-400 uppercase tracking-widest leading-none">Total Split</p>
                          <p className="text-2xl font-black text-zinc-900">${yearlyTotal.toFixed(2)}</p>
                        </div>
                      </div>
                      <div className="h-px w-full bg-zinc-100" />
                      <div className="flex justify-between items-center px-2">
                        <div className="flex items-center gap-2">
                          <div className="w-2 h-2 rounded-full bg-indigo-400" />
                          <span className="text-[10px] font-bold text-zinc-400 uppercase tracking-widest leading-none">Dining</span>
                        </div>
                        <div className="flex items-center gap-2">
                          <div className="w-2 h-2 rounded-full bg-indigo-200" />
                          <span className="text-[10px] font-bold text-zinc-400 uppercase tracking-widest leading-none">Drinks</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                {!isPro ? (
                  <div className="bg-gradient-to-br from-blue-600 via-blue-500 to-blue-700 rounded-[2rem] p-8 text-white text-center shadow-xl shadow-indigo-100 relative overflow-hidden mb-8">
